CC      = gcc
PROF    =
DEBUG   = -g
NOCRYPT =
O_FLAGS =
C_FLAGS = $(O_FLAGS) -Wall $(DEBUG) $(PROF) $(NOCRYPT)
L_FLAGS = $(O_FLAGS)       $(DEBUG) $(PROF)
LIBS    = -lcrypt

#       = $(O_FLAGS)       $(DEBUG) $(PROF) -lefence
